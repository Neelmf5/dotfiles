[module/i3]
type = internal/i3
pin-workspaces = true
show-urgent = true
strip-wsnumbers = true
index-sort = true
enable-click = true
enable-scroll = true
wrapping-scroll = false\
reverse-scroll = false\
fuzzy-match = true
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;10
ws-icon-default = 1
format = <label-state> <label-mode>
label-mode = %mode%
label-mode-padding = 1
label-mode-margin = 1
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.red}
label-focused = %index%
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.blue}
label-focused-padding = 2
label-focused-margin = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-visible = %index%

[module/date]
type = internal/date
interval = 1
date = %Y-%m-%d%
time = %H:%M:%S%
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = %date% %time%

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98
format-charging = <label-charging>
format-discharging = <label-discharging>
format-full = <label-full>
label-charging = " %percentage%% (%time%)"
label-discharging = "  %percentage%% (%time%)"
label-full = "  Full"
time-format = %H:%M

[module/brightness]
type = internal/backlight
card = amdgpu_bl1
enable-scroll = true
format = <label> <bar>
label = " "
bar-width = 10
bar-indicator = |
bar-fill = ─
bar-empty = ─
bar-indicator-foreground = ${colors.primary}
bar-fill-foreground = ${colors.primary}
bar-empty-foreground = ${colors.disabled}

[module/volume]
type = internal/pulseaudio
format-volume = <label-volume> <bar-volume>
label-volume = " "
label-volume-foreground = ${colors.primary}
label-muted = "  muted"
bar-volume-width = 10
bar-volume-foreground-0 = ${colors.disabled}
bar-volume-foreground-1 = ${colors.secondary}
bar-volume-foreground-2 = ${colors.primary}
bar-volume-indicator = |
bar-volume-fill = ─
bar-volume-empty = ─

[module/network]
type = custom/script
exec = ~/.config/polybar/network.sh
tail = true
interval = 1
click-left = ~/.config/polybar/network-menu.sh &
format = <label>
label = %output%

[module/powermenu]
type = custom/script
exec = echo ""
format-prefix = " "
format-prefix-foreground = ${colors.alert}
format-suffix = " "
format-suffix-foreground = ${colors.alert}
click-left = ~/.config/polybar/powermenu.sh &
